{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "Library mod for Blossom-series Fabric mods",
  "authors": [
    "CodedSakura"
  ],
  "contact": {
    "website": "https://blossom.codedsakura.dev",
    "repo": "https://github.com/BlossomMods/${mod_name}"
  },
  "license": "MIT",
  "icon": "assets/blossom-lib/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.codedsakura.blossom.lib.BlossomLib"
    ]
  },
  "mixins": [
    "blossom-lib.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.7",
    "fabric": "*",
    "minecraft": [
      "${supported_versions}"
    ]
  },
  "suggests": {
    "fabric-permissions-api-v0": "*"
  }
}
